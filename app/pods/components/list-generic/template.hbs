<div class="row">

<div class="col-md-11">

		<div class="col-md-3">
			<div class="input-group">

			<span class="input-group-addon">Sort By</span>
			<select class="form-control" id="sortBy" onchange={{action "sortByChg"}}>
			{{#each sortByArr as |sb| }}
				<option value={{sb.val}}>{{sb.name}}</option>
			{{/each}}
			</select>
			</div>
		</div>
		<div class="col-md-3">
			<div class="input-group">

			<span class="input-group-addon">Order By</span>
			<select class="form-control" id="orderBy" onchange={{action "orderByChg"}}>
			{{#each orderByArr as |ob| }}
				<option value={{ob.val}}>{{ob.name}}</option>
			{{/each}}
			</select>
			</div>
		</div>
		<div class="col-md-3">
			<div class="input-group">
				<select class="form-control" id="pageUnit" onchange={{action "pageUnitChg"}}>
				{{#each pageUnitArr as |pu| }}
					<option valu={{pu.val}}>{{pu.name}}</option>
				{{/each}}
				</select> 
				<span class="input-group-addon">record(s)/page</span>
			</div>
		</div>
		<div class="col-md-1  	">
			
			<button type="submit" class="btn btn-primary" {{action "sortList" }} disabled={{isSort}}>Sort </button>
		</div>

</div>

</div>
<hr class="divider">

	<table class="table table-striped table-hover">
		<thead>
			<tr>
			{{#each sortByArr as |sb| }}
				<th>{{sb.name}}</th>
			{{/each}}
			</tr>
		</thead>
		<tbody>
			{{#each model as |leave| }}
				<tr class="detail" id={{leave.leaveId}} ondblclick={{action 'leaveDetail' leave.leaveId}} onclick={{action "multi" leave.leaveId}}>
					<td>{{leave.leaveId}}</td>
					<td>{{leave.requestorName}}</td>
					<td>{{leave.status}}</td>
					<td>{{leave.startDate}}</td>
					<td>{{leave.endDate}}</td>
					<td>{{leave.leaveType}}</td>
					<td>{{leave.createTime}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>

	
	<div class="row">
		<div class="col-md-3 	">
			From <b>{{pageFirst}}</b> To <b>{{pageLast}}</b> / Total <b>{{recordCount}}</b> Record(s)
		</div>
	</div>
<hr class="divider">

<div class="row">

	<div class="col-md-6 col-md-offset-5">
		<nav>
		  <ul class="pagination">
		    <li>
		      <a onclick={{action "pagePre"}} class="list-page" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		      </a>
		    </li>
		    {{#each pages as |page| }}
		    	<li id={{page.id}} class={{page.licls}} onclick={{action "pageChg" page.no}}> <a class={{page.acls}}>{{page.no}}</a></li>
		    {{/each}}
		    <li>
		      <a onclick={{action "pageNext"}} class="list-page" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		      </a>
		    </li>
		  </ul>
		</nav>
	</div>
</div>

{{yield}}

