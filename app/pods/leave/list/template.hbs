
<div class="page-header">
<h1><span class="label label-primary">{{header}}</span></h1>

<div class="btn-group right" role="group">
	{{#if isSubmit}}
		<button type="submit" class="btn btn-primary right" {{action "confirmReq" "submit"}} disabled={{isAction}}>Submit </button>
	{{/if}}
	
	{{#if isCancel}}
		<button type="submit" class="btn btn-default right" {{action "confirmReq" "cancel"}} disabled={{isAction}}>Cancel </button>
	{{/if}}

	{{#if isApprove}}
		<button type="submit" class="btn btn-primary" {{action "confirmReq" "approve" }} disabled={{isAction}}>Approve </button>
		<button type="submit" class="btn btn-default" {{action "confirmReq" "reject" }} disabled={{isAction}}>Reject </button>
	{{/if}}
</div>

</div>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Leave ID</th>
				<th>Staff Name</th>
				<th>Status</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Leave Type</th>
			</tr>
		</thead>
		<tbody>
			{{#each model.leaves as |leave| }}
				<tr class="detail" id={{leave.leaveId}} ondblclick={{action 'leaveDetail' leave.leaveId}} onclick={{action "multi" leave.leaveId}}>
					<td>{{leave.leaveId}}</td>
					<td>{{leave.staffName}}</td>
					<td>{{leave.status}}</td>
					<td>{{leave.startDate}}</td>
					<td>{{leave.endDate}}</td>
					<td>{{leave.leaveType}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>

{{confirm-modal model=model confirmMsg=confirmMsg confirmRequest=(action 'confirm')}}
